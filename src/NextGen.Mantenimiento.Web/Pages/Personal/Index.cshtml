@page
@model NextGen.Mantenimiento.Web.Pages.Personal.IndexModel
@using Microsoft.Extensions.Localization
@using NextGen.Mantenimiento.Localization
@using NextGen.Mantenimiento.Permissions
@using Microsoft.AspNetCore.Authorization
@inject IStringLocalizer<NextGen.Mantenimiento.Localization.MantenimientoResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/Personal/Index.js" />
}
@{

    <abp-card>
        <abp-card-header>
            <abp-row>
                <abp-column size-md="_6">
                    <abp-card-title>@L["Menu:Empleados"]</abp-card-title>
                </abp-column>
                <abp-column size-md="_6" class="text-end">
                    @if (await AuthorizationService.IsGrantedAsync(MantenimientoPermissions.Personal.Create))
                    {

                        <abp-button id="NewPersonalButton"
                                text="@L["Nuevo Empleado"].Value"
                                icon="plus"
                                button-type="Primary" />
                    }
                </abp-column>
            </abp-row>
        </abp-card-header>
        <abp-card-body>
            <abp-table striped-rows="true" id="Personal"></abp-table>
        </abp-card-body>
    </abp-card>

}
