@page
@using NextGen.Mantenimiento.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model NextGen.Mantenimiento.Web.Pages.Categoria.EditModalModel
@inject IStringLocalizer<MantenimientoResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Categoria" asp-page="/Categoria/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Edit"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
