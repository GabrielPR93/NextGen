@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<NextGen.Mantenimiento.Localization.MantenimientoResource> L
@model NextGen.Mantenimiento.Web.Pages.Categoria.CreateModalModel
@{
    Layout = null; 
}

<abp-dynamic-form abp-model="Categoria" asp-page="/Categoria/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["Nueva Categoria"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
