@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<NextGen.Mantenimiento.Localization.MantenimientoResource> L
@model NextGen.Mantenimiento.Web.Pages.TipoAcreditaciones.CreateModalModel
@{
    Layout = null;
}

<abp-dynamic-form abp-model="TipoAcreditaciones" asp-page="/TipoAcreditaciones/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NuevaAcreditacion"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
